<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>MediaElement</title>
  <!-- MediaElement style -->
  <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/mediaelement/4.2.9/mediaelementplayer.css" />
</head>

<body>
  <!-- MediaElement -->
  <script src="//cdnjs.cloudflare.com/ajax/libs/mediaelement/4.2.9/mediaelement-and-player.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

  <h2>Enter your access code to authorize this IP Address:</h2>
  <form name="tosaccept" id="tosaccept" method="post" action="">
    <div class="form-group">
    <label for="passwordInputPassword1">Access Code:</label>
    <input type="password" name="password" class="form-control" id="passwordInputPassword1" placeholder="Password">
  </div>
  <div class="form-check">
    <label class="form-check-label">
      <input id="tos" type="checkbox" class="form-check-input">
      <a href="{{terms_link}}" target="_blank">I Accept the Terms and Conditions</a>
    </label>
  </div>
  <button type="submit" name="authorize" id="authorize" class="btn btn-primary pull-right">Authorize This Computer</button>
  </form>
</body>
<script type="text/javascript">

$("#authorize").click(function(e){
  e.preventDefault();
  if($("#tos").is(":checked")){
    $( "#tosaccept" ).submit();
  }else{
    alert("Please accept the Terms and Conditions before Proceeding...");
  }


});


$("#authorize").submit(function(){
  alert("Submitted");
});


</script>







</html>
